# Vagrant aliases 
alias vgi="vagrant init"
alias vgu="vagrant up --no-provision --provider=vmware_fusion && vagrant ssh"
alias vgup="vagrant up --provider=vmware_fusion && vagrant ssh"
alias vgua="vagrant up --provider=aws"
alias vgs="vagrant status"
alias vgd="vagrant destroy -f"
alias vgssh="vagrant ssh"
alias vgbr="vagrant box remove $1"
alias vgbl="vagrant box list"
alias vgpl="vagrant plugin list"

#Packer aliases
alias packv="packer validate"
alias packb="packer build template.json"
alias packc="rm -rf ./output-vmware"
alias packit="packc && packb"

#Docker aliases
alias dkr="docker run -i -t $1"
alias dki="docker images"
alias dkps="docker ps -a"

#Screen aliases 
alias sls="screen -ls"
alias sr="screen -r"
alias ss="screen -S"

#Tmux aliases 
alias tn="tmux new -s $1"
alias ta="tmux attach -t $1"
alias tad="tmux attach -dt $1"
alias tls="tmux ls"

#Git 
alias gi='git init'
alias ga='git add'
alias gp='git push'
alias gl='git log --pretty --pretty=oneline'
alias gs='git status'
alias gd='git diff'
alias gdc='git diff --cached'
alias gm='git commit -m'
alias gma='git commit -am'
alias gb='git branch'
alias gc='git checkout'
alias gra='git remote add'
alias grr='git remote rm'
alias gpu='git pull'
alias gcl='git clone'
alias grv='git remote -v'
alias gco='git checkout'
alias gbl='git branch -v'

#Vim alias
alias vi="vim"

#Custom aliases
alias ll="ls -lh"
alias hs="history"

#Splunk aliases
alias cddeploy="cd /opt/splunk/etc/deployment-apps"
alias cdlocal="cd /opt/splunk/etc/system/local"
alias spkrd="sudo /opt/splunk/bin/splunk reload deploy-server"
alias tailsplunk="sudo tail -f /opt/splunkforwarder/var/log/splunk/splunkd.log"

#Puppet aliases
alias cdnod="cd /etc/puppet/manifests/nodes/"
alias cdmod="cd /etc/puppet/modules"
alias pl="puppet cert list --all"
